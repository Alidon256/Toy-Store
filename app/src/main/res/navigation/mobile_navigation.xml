<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.toystore.Fragments.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.example.toystore.Fragments.ui.Shop.ShopFragment"
        android:label="Shope"
        tools:layout="@layout/fragment_shop" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.toystore.Fragments.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_messages"
        android:name="com.example.toystore.Fragments.ui.Chat.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.toystore.Fragments.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <action
        android:id="@+id/navigation_homeAc"
        app:destination="@id/navigation_home"
        app:popUpTo="@id/navigation_home"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/navigation_shopAc"
        app:destination="@id/navigation_shop"
        app:popUpTo="@id/navigation_home"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/navigation_dashboardAc"
        app:destination="@id/navigation_dashboard"
        app:popUpTo="@id/navigation_home"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/navigation_notificationsAc"
        app:destination="@id/navigation_notifications"
        app:popUpTo="@id/navigation_home"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/navigation_messagesAc"
        app:destination="@id/navigation_messages"
        app:popUpTo="@id/navigation_home"
        app:popUpToInclusive="true" />

</navigation>
